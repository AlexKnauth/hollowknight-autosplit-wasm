{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "b",
			"problemMatcher": [
				"$rustc",
				"$rust-panic"
			],
			"group": "build",
			"label": "Build Auto Splitter"
		},
		{
			"label": "Debug Auto Splitter",
			"type": "process",
			"problemMatcher": [],
			// Install the asr-debugger with:
			// cargo install --git https://github.com/CryZe/asr-debugger
			"command": "asr-debugger",
			"args": [
				"target${pathSeparator}wasm32-unknown-unknown${pathSeparator}release${pathSeparator}wasm_hollowknight_autosplit.wasm",
			],
			"dependsOn": "Build Auto Splitter"
		}
	]
}
